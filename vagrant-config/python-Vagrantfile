# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
  config.vm.box = "ubuntu/trusty64"
  config.vm.network "forwarded_port", guest: 3333, host: 3333
  config.vm.provider "virtualbox" do |vb|
	vb.customize [
	    "modifyvm", :id,
	    "--name", "motiobox",
	    "--memory", "2048",
	    "--cpus", "1",
	    "--paravirtprovider", "kvm", # for linux guest
            "--vram", "128",
	    "--accelerate3d", "on",
	    "--vrde", "on",
	    "--vrdeauthtype", "null",
	    "--vrdemulticon", "off"
	]
  end
  ############################################################
  # Oh My ZSH + Dependencies Install section

  # MongoDB (uncomment or update if instructions change)
  # config.vm.provision :shell, inline: "sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv 7F0CEB10"
  # config.vm.provision :shell, inline: 'echo "deb http://repo.mongodb.org/apt/ubuntu trusty/mongodb-org/3.0 multiverse" | sudo tee /etc/apt/sources.list.d/mongodb-org-3.0.list'

  # Install git and zsh prerequisites 
  # config.vm.provision :shell, inline: "sudo apt-get -y autoremove"
  config.vm.provision :shell, inline: "sudo touch /etc/apt/sources.list.d/pgdg.list && echo 'deb http://apt.postgresql.org/pub/repos/apt/ trusty-pgdg main' > /etc/apt/sources.list.d/pgdg.list"
  config.vm.provision :shell, inline: "wget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | sudo apt-key add -"
  config.vm.provision :shell, inline: "sudo apt-get update"
  # config.vm.provision :shell, inline: "sudo apt-get -y install git zsh libncursesw5-dev libssl-dev libgdbm-dev libsqlite3-dev libbz2-dev libreadline-dev libz-dev liblzma-dev libdb-dev tk-dev postgresql postgresql-contrib libpq-dev python-dev postgresql-server-dev-all build-essential make ruby-dev zlib1g-dev libyaml-dev curl libxml2-dev libxslt1-dev libcurl4-openssl-dev python-software-properties libffi-dev libgmp-dev"
  config.vm.provision :shell, inline: "sudo apt-get -y install git zsh libncursesw5-dev libssl-dev libgdbm-dev libsqlite3-dev libbz2-dev libreadline-dev libz-dev liblzma-dev libdb-dev tk-dev postgresql-9.4 postgresql-contrib-9.4 libpq-dev python-dev postgresql-server-dev-9.4 build-essential make zlib1g-dev libyaml-dev curl libxml2-dev libxslt1-dev libcurl4-openssl-dev python-software-properties libffi-dev libgmp-dev"

  ## MongoDB (cont'd)
  # config.vm.provision :shell, inline: "sudo apt-get install -y mongodb-org"
  
  # Clone Oh My Zsh from the git repo and get the babun theme from the repo
  config.vm.provision :shell, privileged: false,
    inline: "git clone git://github.com/robbyrussell/oh-my-zsh.git ~/.oh-my-zsh"

  config.vm.provision :shell, privileged: false,
    inline: "curl -o ~/.oh-my-zsh/custom/babun.zsh-theme https://raw.githubusercontent.com/imdaveho/environment/master/shell-config/vagrant-babun.zsh-theme"
    # inline: "curl -o ~/.oh-my-zsh/custom/babun.zsh-theme https://raw.githubusercontent.com/babun/babun/master/babun-core/plugins/oh-my-zsh/src/babun.zsh-theme"

  # Clone *env from their respective repos
  # config.vm.provision :shell, privileged: false,
  #   inline: "git clone https://github.com/sstephenson/rbenv.git ~/.rbenv"
  # config.vm.provision :shell, privileged: false,
  #   inline: "git clone https://github.com/sstephenson/ruby-build.git ~/.rbenv/plugins/ruby-build"
  config.vm.provision :shell, privileged: false,
    inline: "git clone https://github.com/OiNutter/nodenv.git ~/.nodenv"
  config.vm.provision :shell, privileged: false,
    inline: "git clone https://github.com/OiNutter/node-build.git ~/.nodenv/plugins/node-build"
  config.vm.provision :shell, privileged: false,
    inline: "git clone https://github.com/yyuu/pyenv.git ~/.pyenv"
  config.vm.provision :shell, privileged: false,
    inline: "git clone https://github.com/yyuu/pyenv-virtualenv.git ~/.pyenv/plugins/pyenv-virtualenv"

  # Copy in the default .zshrc config file
  config.vm.provision :shell, privileged: false,
    # inline: "cp ~/.oh-my-zsh/templates/zshrc.zsh-template ~/.zshrc"
    inline: "curl -o ~/.zshrc https://raw.githubusercontent.com/imdaveho/environment/master/shell-config/vagrant-zshrc"

  # Change the vagrant user's shell to use zsh
  config.vm.provision :shell, inline: "chsh -s $(which zsh) vagrant"

  ############################################################
end

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
